<div class="center jumbotron">
    <h1>Hello, world!</h1>
    <p>Welcome to my basic blogging application.</p>
    <p>
        <% if logged_in? %>
            <%= link_to "Go to Articles", posts_path, class: "btn btn-primary btn-lg" %>
        <% else %>
            <%= link_to "Log In", login_path, class: "btn btn-primary btn-lg" %>
            <%= link_to "Sign Up", signup_path, class: "btn btn-lg" %>
        <% end %>
    </p>
</div>
