<div class="row">
    <div class="col-xs-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="col-xs-2 control-label">
                <%= f.label :name %>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :name, class: "form-control", placeholder: "category name", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <%= f.submit class: "btn btn-success btn-lg" %>
                <%= link_to "Cancel & Return to List", posts_path, class: "btn btn-danger btn-lg" %>
            </div>
        </div>
        <% end %>
    </div>
</div>