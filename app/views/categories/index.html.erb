<h1 class="center">Category List</h1>
<div align="center">
    <%= will_paginate %>
</div>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th># of articles</th>
        <th>Actions</th>
    </tr>
    <% i = 1 %>
    <% @categories.each do |category| %>
        <tr>
            <td><%= i %></td>
            <td><%= link_to category.name, category_path(category) %></td>
            <td><%= pluralize category.posts.count, "article" %></td>
            <td>
                <% if logged_in? && current_user.is_admin %>
                    <%= link_to 'Edit', edit_category_path(category), class: "btn btn-xs btn-primary" %>
                    <%= link_to 'Delete', category_path(category), method: :delete, class: "btn btn-xs btn-danger",
                        data: {confirm: "are you sure?"} %>
                <% end %>
            </td>
            <% i = i + 1 %>
        </tr>
    <% end %>
</table>
<div align="center">
    <%= will_paginate %>
</div>